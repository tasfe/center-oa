<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:ex="http://www.springframework.org/schema/ex"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
				http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
				http://www.springframework.org/schema/ex http://www.springframework.org/schema/ex/spring-ex-2.0.xsd"
	default-autowire="byName" default-init-method="init">

	<ex:annotation-exceptional exceptional-manager="exceptionalManager"/>
	
	<tx:annotation-driven transaction-manager="transactionManager" />

</beans>
